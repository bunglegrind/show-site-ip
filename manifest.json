{
  "manifest_version": 2,
  "name": "Show server IP",
  "version": "0.3.0",
  "description": "Show server IP address on hover over the icon in the address bar",
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "browser_style": true,
    "default_icon": "icons/ip.svg",
    "default_title": "Show server IP",
    "show_matches": ["<all_urls>"]
  },
  "permissions": [
    "webRequest",
    "<all_urls>",
    "clipboardWrite"
  ]
}

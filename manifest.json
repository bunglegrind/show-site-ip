{
  "manifest_version": 2,
  "name": "Show server IP",
  "version": "1.0.0",
  "description": "Show server IP when hovering over the icon in the address bar and copy it to the clipboard when clicking",
  "icons": {
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": "icons/ip.svg",
    "default_title": "Show server IP",
    "show_matches": ["http://*/*", "https://*/*"]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webNavigation",
    "clipboardWrite"
  ]
}
